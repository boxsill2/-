<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <title>F1 팀 목록</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" href="/css/base.css?v=f1" />
    <link rel="stylesheet" href="/css/header-style.css?v=f1" />
    <link rel="stylesheet" href="/css/team-style.css?v=f1" />
</head>
<body>
    <div id="page-wrapper">
        <%- include('partials/header', { currentPage: currentPage }) %>
        <main id="page-main">
            <h1 class="page-title">F1 팀</h1>
            <% if (error) { %>
                <p class="page-desc"><%= error %></p>
            <% } else { %>
                <div class="team-grid">
                    <% teams.forEach(function(team) { %>
                        <a href="/teams/<%= team.slug %>" class="team-card">
                            <img src="<%= team.logo %>" alt="<%= team.team_name %> 로고" class="team-logo">
                            <h2 class="team-name"><%= team.team_name %></h2>
                        </a>
                    <% }); %>
                </div>
            <% } %>
        </main>
    </div>
</body>
</html>
